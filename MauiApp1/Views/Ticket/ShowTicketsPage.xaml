<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Views.Ticket.ShowTicketsPage"
             Title="ShowTicketsPage">

    
    <!--To make an element clickable in CollectionView add: SelectionMode="Single" and SelectionChanged="OnTicketSelected"
    -->
    <VerticalStackLayout>
        <Label Text="Noklikšķiniet uz elementa, lai to atjauninātu" FontSize="24" HorizontalOptions="Center" BackgroundColor="Red"/>

        <CollectionView ItemsSource="{Binding Tickets}"
                    SelectionMode="Single"
                    SelectionChanged="OnTicketSelected">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="5" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            
            <DataTemplate>
                <!---->
                <Frame Margin="8"
                   Padding="8"
                   BorderColor="LightGray"
                   CornerRadius="12"
                   BackgroundColor="FloralWhite">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="{Binding TicketID}" FontSize="12" />
                        <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" />
                        <Label Text="{Binding Description}" FontSize="14" />
                        <Label Text="{Binding Priority}" FontSize="12" TextColor="Green" />
                        <Label Text="{Binding CreatedBy}" FontSize="12" />
                        <Label Text="{Binding Status}" FontSize="12" />
                        <Label Text="{Binding IsResolved}" FontSize="12" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
        
    </VerticalStackLayout>


</ContentPage>