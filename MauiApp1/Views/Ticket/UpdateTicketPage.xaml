<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Views.Ticket.UpdateTicketPage"
             Title="UpdateTicketPage">
    
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Update Ticket" FontSize="24" HorizontalOptions="Center"/>

        <!--<Entry x:Name="TicketIdInput" Placeholder="Ticket ID"/>-->
        <Label Text="Ticket ID can't be updated"/>
        <Entry x:Name="TitleInput" Placeholder="Title"/>
        <Entry x:Name="DescriptionInput" Placeholder="Description"/>
        <Entry x:Name="PriorityInput" Placeholder="Priority (integer)"/>
        <Picker x:Name="StatusPicker" Title="Select Status"/>
        <Picker x:Name="EmployeePicker" Title="Select Employee"/>
        <Switch x:Name="IsActiveSwitch"/>

        <Button Text="Save Changes" Clicked="SaveButton_Clicked"/>
    </VerticalStackLayout>
    
</ContentPage>