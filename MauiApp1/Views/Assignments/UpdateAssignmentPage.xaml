<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Views.Assignments.UpdateAssignmentPage"
             Title="UpdateAssignmentPage">
    
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Update Assignment" FontSize="24" HorizontalOptions="Center"/>

        <!--<Entry x:Name="TitleInput" Placeholder="Assigned at"/>-->

        <Picker x:Name="TicketPicker" Title="Select Ticket"/>
        <Picker x:Name="ITSupportPicker" Title="Select IT Support"/>
        <Entry x:Name="CommentInput" Placeholder="Comment"/>


        <Button Text="Save Changes" Clicked="SaveButton_Clicked"/>
    </VerticalStackLayout>
    
</ContentPage>