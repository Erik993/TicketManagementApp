<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Views.Employees.ShowEmployeesPage"
             Title="ShowEmployeesPage">

    <CollectionView ItemsSource="{Binding Employees}">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="5" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="8"
                   Padding="12"
                   BorderColor="LightGray"
                   CornerRadius="12"
                   BackgroundColor="FloralWhite">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="{Binding UserId}" FontSize="12" TextColor="Gray" />
                        <Label Text="{Binding UserName}" FontSize="18" FontAttributes="Bold" />
                        <Label Text="{Binding Email}" FontSize="14" />
                        <Label Text="{Binding IsActive}" FontSize="12" TextColor="Green" />
                        <Label Text="{Binding ContractDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                           FontSize="12" TextColor="Gray" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>