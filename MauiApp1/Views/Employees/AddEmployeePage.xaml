<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Views.Employees.AddEmployeePage"
             Title="AddEmployeePage">
    
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Add New Employee" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="IdInput" Placeholder="User ID (integers only - no exception handling)"/>
        <Entry x:Name="NameInput" Placeholder="Name"/>
        <Entry x:Name="EmailInput" Placeholder="Email ( 1+ char, @ symbol, 1+ char .(dot) symbol, 1+ char"/>
        <Switch x:Name="IsActiveSwitch"/>

        <Button Text="Save Employee" Clicked="SaveButton_Clicked"/>
    </VerticalStackLayout>
    
</ContentPage>